{
    "manifest_version": 3,
    "name": "AI for Sensitive Security",
    "version": "1.0",
    "description": "AI for Sensitive Security is an extension that scans your emails in real-time to alert you before sending any sensitive information, ensuring enhanced privacy and security in your digital communication.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "*://mail.google.com/*",
      "*://outlook.live.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["*://mail.google.com/*", "*://outlook.live.com/*"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "img/icon16.png",
      "48": "img/icon48.png",
      "128": "img/icon128.png"
    }
}